<%- include('./partials/header') %>
<%- include('./partials/navbarLogged', {user}) %>

<div class="container">
    <div class="row">
        <div class="col-2 border-end border-start border-secondary" style="min-height: 100vmax;height: auto;">
        </div>
        <div class="col-8 border-end border-secondary" style="min-height: 100vmax;height: auto;">
            <div class="d-flex flex-column align-items-center gap-4 my-5 px-5">
                <div>
                    <img src="<%= user.Profile.imageUrl %>" alt="" class="rounded-circle border border-3 border-secondary" width="200px" height="200px">
                </div>
                <form action="/home/<%= user.Profile.username %>/profile" method="post" class="container border border-secondary py-3 rounded" enctype="multipart/form-data">
                      <div class="mb-3">
                        <label class="form-label">fullName</label>
                        <input type="text" class="form-control" value="<%= user.Profile.fullName%>" name="fullName">
                      </div>
                      <div class="mb-3">
                        <label class="form-label">phone</label>
                        <input type="text" class="form-control" value="<%= user.Profile.phone%>" name="phone">
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Address</label>
                       <textarea name="userAddress"  cols="3" class="form-control"><%= user.Profile.userAddress %></textarea>
                      </div>
                      <div class="form-control mb-3 d-flex">
                        <Label>Profile Picture</Label>
                        <input type="file" class="form-control" name="imageUrl">
                      </div>
                      <button type="submit" class="btn btn-outline-primary">Save</button>
                </form>
            </div >
        </div>
        <div class="col-2 border-end border-secondary" style="min-height: 100vmax;height: auto;">
        </div>
    </div>
</div>



<%- include('./partials/footer') %>